@model AspFoodProject.Models.Recipe

@{
    ViewData["Title"] = "Details of the Recipe";
}

<h1 style="color:black"><center> @ViewData["Title"]</center></h1>


<div>
 
    <hr />

    <div>


        <div class="card" style="width:500px">

            <img class="card-img-top" src="@Model.ImageUrl" alt="@Model.RecipeName"
                 style="max-height: 300px;">
            <div class="card-body">
                <h4 class="card-title">@Model.RecipeName</h4>
                <div class="row">
                    <div class="col card-text">
                        @Html.DisplayNameFor(model => model.Ingredients)
                    </div>
                    <div class="col card-text">
                        @Html.DisplayFor(model => model.Ingredients)
                    </div>

                </div>
                <div class="row">
                    <div class="col card-text">
                        @Html.DisplayNameFor(model => model.RecipeDescription)
                    </div>
                    <div class="col card-text">
                        @Html.DisplayFor(model => model.RecipeDescription)
                    </div>

                </div>
                <div class="row">
                    <div class="col card-text">
                        @Html.DisplayNameFor(model => model.OrderDateTime)
                    </div>
                    <div class="col card-text">
                        @Html.DisplayFor(model => model.OrderDateTime)
                    </div>

                </div>
                <div class="row">
                    <div class="col card-text">
                        @Html.DisplayNameFor(model => model.hours1)
                    </div>
                    <div class="col card-text">
                        @Html.DisplayFor(model => model.hours1)
                    </div>

                </div>
                <div class="row">
                    <div class="col card-text">
                        @Html.DisplayNameFor(model => model.hours2)
                    </div>
                    <div class="col card-text">
                        @Html.DisplayFor(model => model.hours2)
                    </div>

                </div>
                <div class="row">
                    <div class="col card-text">
                        @Html.DisplayNameFor(model => model.Name)
                    </div>
                    <div class="col card-text">
                        @Html.DisplayFor(model => model.Name)
                    </div>

                </div>
                <div class="row">
                    <div class="col card-text">
                        @Html.DisplayNameFor(model => model.EmailID)
                    </div>
                    <div class="col card-text">
                        @Html.DisplayFor(model => model.EmailID)
                    </div>

                </div>
            </div>
            <div class="card-footer text-center">
                <button type="button" class="btn btn-primary">  <a style="color:black" asp-action="Edit" asp-route-id="@Model.RecipeId">Edit</a> </button> |

                <button type="button" class="btn btn-warning"> <a style="color:black" asp-action="Index">Back to List</a> </button>
            </div>
        </div>

        