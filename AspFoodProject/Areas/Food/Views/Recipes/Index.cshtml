@model IEnumerable<AspFoodProject.Models.Recipe>

@{
    ViewData["Title"] = "List of Recipes";
}
<header>
    <nav class="navbar navbar-expand navbar-dark bg-success">
        <div class="container-fluid">
            <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                <img src="~/Images/logo.png" style="width:35px" /> Food Recipe
            </a>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                <li class="active">
                    <a class="nav-link text-dark"
                       asp-area="HomePage" asp-controller="FoodRecipes" asp-action="Index">Home</a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-page="/about">About</a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-page="/services">Services</a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-page="/gallery">Gallery</a>
                </li>
                <li class="#">
                    <a class="nav-link text-dark" asp-area="" asp-page="/contact">Contact</a>
                </li>

                <!-- DROPDOWN OPTIONS -->
                <li class="nav-item dropdown">
                <li class="nav-item dropdown">
                    <button type="button" class="btn btn-primary">Admin</button>
                    <button type="button" class="btn btn-prim dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    </button>
                    <div class="dropdown-menu">

                        <a class="dropdown-item"
                           asp-area="Food" asp-controller="Categories" asp-action="Index">Add Category</a>


                        <a class="dropdown-item"
                           asp-area="Food" asp-controller="SubCategories" asp-action="Index">Add SubCategory</a>

                        <a class="dropdown-item"
                           asp-area="Food" asp-controller="Recipes" asp-action="Index">Recipe</a>

                        <a class="dropdown-item"
                           asp-area="Food" asp-controller="Customers" asp-action="Index">Add Customer</a>

                        <a class="dropdown-item"
                           asp-area="Food" asp-controller="Competitions" asp-action="Index">Add Event</a>

                        <a class="dropdown-item"
                           asp-area="Food" asp-controller="Comments" asp-action="Index">Comment</a>

                        <a class="dropdown-item"
                           asp-area="Food" asp-controller="Registerations" asp-action="Index">Registeration</a>


                    </div>
                </li>




            </ul>
        </div>

    </nav>
</header>

<h1 style="color:black"><center> @ViewData["Title"]</center></h1>

<p>
    <center>
        <button type="button" class="btn btn-primary"> <a style="color:black" asp-area="ManageTable" asp-controller="Home" asp-action="Index1">Recipes by Category</a> </button>

    </center>
</p>

<hr/>

<table class="table">
    <thead>
        <tr class="alert-warning">
            <th>
                @Html.DisplayNameFor(model => model.RecipeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredients)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipeDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsEnabled)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderDateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hours1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.hours2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="alert-info">
            <td>
                @Html.DisplayFor(modelItem => item.RecipeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredients)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsEnabled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hours1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.hours2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                    <button type="button" class="btn btn-primary">  <a style="color:black" asp-action="Edit" asp-route-id="@item.RecipeId">Edit</a> </button>

                    <button type="button" class="btn btn-success">  <a style="color:black" asp-action="Details" asp-route-id="@item.RecipeId">Details</a> </button>
                    <button type="button" class="btn btn-danger">  <a style="color:black" asp-action="Delete" asp-route-id="@item.RecipeId">Delete</a> </button>

                </td>
        </tr>
}
    </tbody>
</table>
