@model IEnumerable<AspFoodProject.Models.SubCategory>

@{
    ViewData["Title"] = "List of Subcategories";
}

<h1 style="color:black"><center> @ViewData["Title"]</center></h1>


<p>
    <center>
        <button type="button" class="btn btn-primary"> <a style="color:black" asp-action="Create">Create New</a> </button>

    </center>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SubcategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubcategoryDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SubcategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubcategoryDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                    <button type="button" class="btn btn-primary">  <a style="color:black" asp-action="Edit" asp-route-id="@item.SubcategoryId">Edit</a> </button> 
                    <button type="button" class="btn btn-success">  <a style="color:black" asp-action="Details" asp-route-id="@item.SubcategoryId">Details</a> </button> 
                    <button type="button" class="btn btn-danger"> <a style="color:black" asp-action="Delete" asp-route-id="@item.SubcategoryId">Delete</a> </button>
            </td>
        </tr>
}
    </tbody>
</table>
