@model AspFoodProject.Models.Competition

@{
    ViewData["Title"] = "Edit Event";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LMS.Web</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<style>
    body {
        font-family: Calibri, Helvetica, sans-serif;
        background-image: url('/Images/text1.jpg');
    }



    .card {
        background-color: powderblue;
    }

    .card-title {
        font-family: 'Big Shoulders Text', cursive;
        color: red;
        text-transform: uppercase;
        font-size: 16px;
        padding: 5px 10px;
        letter-spacing: 2px;
        border: 0;
    }

</style>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-dark bg-success">
            <div class="container">

                <a class="nav-link text-dark" asp-area="" asp-page="/Index">
                    <img src="~/Images/logo.png" style="width:35px" /> Food Recipe
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>

                        </li>

                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/about">About</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-page="/services">Services</a>
                        </li>

                        <li class="#">
                            <a class="nav-link text-dark" asp-area="" asp-page="/contact">Contact</a>
                        </li>

                        <!-- DROPDOWN OPTIONS -->
                        <li class="nav-item dropdown">
                        <li class="nav-item dropdown">
                            <button type="button" class="btn btn-primary">Manage</button>
                            <button type="button" class="btn btn-prim dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            </button>
                            <div class="dropdown-menu">

                                <a class="dropdown-item" asp-area="" asp-page="/gallery"> Recipe</a>



                                <a class="dropdown-item" asp-area="" asp-page="/gallery1">Event</a>




                            </div>
                        </li>

                        <!-- DROPDOWN OPTIONS -->
                        <li class="nav-item dropdown">
                        <li class="nav-item dropdown">
                            <button type="button" class="btn btn-primary">User</button>
                            <button type="button" class="btn btn-prim dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            </button>
                            <div class="dropdown-menu">

                                <a class="dropdown-item"
                                   asp-area="ManageTable" asp-controller="Home" asp-action="Index">Subcategory</a>


                                <a class="dropdown-item"
                                   asp-area="ManageTable" asp-controller="Home" asp-action="Index1">Recipe</a>

                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Recipes" asp-action="Index1">Add Recipe</a>


                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Customers" asp-action="ShowComment"> Comment</a>

                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Customers" asp-action="ShowCompetition"> Event</a>


                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Registerations" asp-action="Index1">Add Registeration</a>


                            </div>
                        </li>

                        <!-- DROPDOWN OPTIONS -->
                        <li class="nav-item dropdown">
                        <li class="nav-item dropdown">
                            <button type="button" class="btn btn-primary">Admin</button>
                            <button type="button" class="btn btn-prim dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            </button>
                            <div class="dropdown-menu">

                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Categories" asp-action="Index">Add Category</a>


                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="SubCategories" asp-action="Index">Add SubCategory</a>

                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Recipes" asp-action="Index">Recipes</a>

                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Customers" asp-action="Index"> Customers</a>

                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Competitions" asp-action="Index">Add Event</a>

                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Comments" asp-action="Index">Add Comment</a>

                                <a class="dropdown-item"
                                   asp-area="Food" asp-controller="Registerations" asp-action="Index">Registerations</a>


                            </div>
                        </li>


                    </ul>
                </div>


            </div>
        </nav>
    </header>
<h1 style="color:black"><center> @ViewData["Title"]</center></h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="EventId" />
            <div class="form-group">
                <label asp-for="EventName" class="control-label"></label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventAddress" class="control-label"></label>
                <input asp-for="EventAddress" class="form-control" />
                <span asp-validation-for="EventAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsEnabled" /> @Html.DisplayNameFor(model => model.IsEnabled)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="OrderDateTime" class="control-label"></label>
                <input asp-for="OrderDateTime" class="form-control" />
                <span asp-validation-for="OrderDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDateTime1" class="control-label"></label>
                <input asp-for="OrderDateTime1" class="form-control" />
                <span asp-validation-for="OrderDateTime1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="hours1" class="control-label"></label>
                <input asp-for="hours1" class="form-control" />
                <span asp-validation-for="hours1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phase" class="control-label"></label>
                <input asp-for="Phase" class="form-control" />
                <span asp-validation-for="Phase" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br/>
<div>
    <button type="button" class="btn btn-warning"> <a style="color:black" asp-action="Index">Back to List</a> </button>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>