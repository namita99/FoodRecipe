<h1 style="color:black"><center> @ViewData["Title"]</center></h1>
<p>
    <center>
        <button type="button" class="btn btn-primary"> <a style="color:black" asp-area="Food" asp-controller="Customers" asp-action="Create">Register</a> </button>

    </center>
</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RegisterAddress" class="control-label"></label>
                <input asp-for="RegisterAddress" class="form-control" />
                <span asp-validation-for="RegisterAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterNo" class="control-label"></label>
                <input asp-for="RegisterNo" class="form-control" />
                <span asp-validation-for="RegisterNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegisterEmailID" class="control-label"></label>
                <input asp-for="RegisterEmailID" class="form-control" />
                <span asp-validation-for="RegisterEmailID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="IsEnabled" /> @Html.DisplayNameFor(model => model.IsEnabled)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="OrderDateTime" class="control-label"></label>
                <input asp-for="OrderDateTime" class="form-control" />
                <span asp-validation-for="OrderDateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EventId" class="control-label"></label>
                <select asp-for="EventId" class ="form-control" asp-items="ViewBag.EventId"></select>
            </div>
            <div class="form-group">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class ="form-control" asp-items="ViewBag.CustomerId"></select>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />

<div>
    <button type="button" class="btn btn-warning"> <a style="color:black" asp-action="Index1">Back to List</a> </button>
</div>

