
@using AspFoodProject.Areas.ManageTable.ViewModels
@model ShowCategoryViewModel

@{
    ViewData["Title"] = "The Category";
}

<header>
    <nav class="navbar navbar-expand navbar-dark bg-success">
        <div class="container-fluid">
            <a class="nav-link text-dark" asp-area="HomePage" asp-controller="FoodRecipes" asp-action="Index">
                <img src="~/Images/logo.png" style="width:35px" /> Food Recipe
            </a>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                <li class="active">
                    <a class="nav-link text-dark" asp-area="HomePage" asp-controller="FoodRecipes" asp-action="Index">Home</a>

                </li>
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-page="/about1">About</a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-page="/services1">Services</a>
                </li>
                <li>
                    <a class="nav-link text-dark" asp-area="" asp-page="/gallery1">Gallery</a>
                </li>
                <li class="#">
                    <a class="nav-link text-dark" asp-area="" asp-page="/contact1">Contact</a>
                </li>

                <!-- DROPDOWN OPTIONS -->
                <li class="nav-item dropdown">
                <li class="nav-item dropdown">
                    <button type="button" class="btn btn-primary">User</button>
                    <button type="button" class="btn btn-prim dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    </button>
                    <div class="dropdown-menu">

                        <a class="dropdown-item"
                           asp-area="ManageTable" asp-controller="Home" asp-action="Index">Subcategory</a>


                        <a class="dropdown-item"
                           asp-area="ManageTable" asp-controller="Home" asp-action="Index1">Recipe</a>

                        <a class="dropdown-item"
                           asp-area="Food" asp-controller="Recipes" asp-action="Index1">Add Recipe</a>

                        <a class="dropdown-item"
                           asp-area="Food" asp-controller="Competitions" asp-action="Index1">Event</a>

                        <a class="dropdown-item"
                           asp-area="Food" asp-controller="Comments" asp-action="Index1">Add Comment</a>

                        <a class="dropdown-item"
                           asp-area="Food" asp-controller="Registerations" asp-action="Index1">Add Registeration</a>


                    </div>
                </li>




            </ul>
        </div>

    </nav>
</header>
<h1 style="color:black"><center> @ViewData["Title"]</center></h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>

            <button type="submit" class="btn btn-primary">Get items</button>
        </form>
    </div>
</div>


@if (Model != null && Model.Subcategories != null)
{
    <form method="post">
        <input type="hidden" asp-for="CategoryId" />

        <div class="card-columns mt-3">
            @foreach (var item in Model.Subcategories)
            {
                <div class="card" style="width:400px">

                    <img class="card-img-top" src="@item.ImageUrl" alt="@item.SubcategoryName"
                 style="max-height: 300px;">
                    <div class="card-body">
                        <h4 class="card-title">@item.SubcategoryName</h4>
                        <div class="row">
                            <div class="col card-text">
                                @Html.DisplayNameFor(model => item.SubcategoryDescription)
                            </div>
                            <div class="col card-text">
                                @Html.DisplayFor(model => item.SubcategoryDescription)
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <select asp-for="Quantity">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                           <button type="button" class="btn btn-primary"> <a class="btn btn-primary" asp-area="Food" asp-controller="Recipes" asp-action="Create">Add Recipe</a> </button>

                    </div>
                </div>
            }
        </div>
    </form>
}


