<h1 style="color:black"><center> @ViewData["Title"]</center></h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <br/> 
            <button type="submit" class="btn btn-primary">Get items</button>
        </form>
    </div>
</div>
    <br />
    <br />

@if (Model != null && Model.Subcategories != null)
{
    <form method="post">
        <input type="hidden" asp-for="CategoryId" />

        <div class="card-columns mt-3">
            @foreach (var item in Model.Subcategories)
            {
                    <div class="card" style="width:100%">
                        <div class="card-body">
                            <img class="card-img-top" src="@item.ImageUrl" alt="@item.SubcategoryName" width="40%">

                            <h4 class="card-title">SubCategory Name: </h4> @item.SubcategoryName
                            <h4 class="card-title">Description: </h4> @item.SubcategoryDescription
                           


                        </div>
                    <div class="card-footer">
                        <select asp-for="Quantity">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                           <button type="button" class="btn btn-primary"> <a class="btn btn-primary" asp-area="Food" asp-controller="Recipes" asp-action="Create">Add Recipe</a> </button>

                    </div>
                </div>
                    <br />  <br />
            }
        </div>
      
    </form>
}


</body>
</html>

