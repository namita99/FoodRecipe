
@using AspFoodProject.Areas.ManageTable.ViewModels
@model ShowCategoryViewModel

@{
}


<h1>The Category</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>

            <button type="submit" class="btn btn-primary">Get items</button>
        </form>
    </div>
</div>


@if (Model != null && Model.Subcategories != null)
{
    <form method="post">
        <input type="hidden" asp-for="CategoryId" />

        <div class="card-columns mt-3">
            @foreach (var item in Model.Subcategories)
            {
                <div class="card" style="width:400px">

                    <img class="card-img-top" src="@item.ImageUrl" alt="@item.SubcategoryName"
                 style="max-height: 300px;">
                    <div class="card-body">
                        <h4 class="card-title">@item.SubcategoryName</h4>
                        <div class="row">
                            <div class="col card-text">
                                @Html.DisplayNameFor(model => item.SubcategoryDescription)
                            </div>
                            <div class="col card-text">
                                @Html.DisplayFor(model => item.SubcategoryDescription)
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <select asp-for="Quantity">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                        
                    </div>
                </div>
            }
        </div>
    </form>
}


