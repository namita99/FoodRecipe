@using AspFoodProject.Areas.ManageTable.ViewModels
@model ShowRecipeViewModel

@{
}

<h1>The Recipe</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>

            <button type="submit" class="btn btn-primary">Get items</button>
        </form>
    </div>
</div>


@if (Model != null && Model.Recipes != null)
{
    <form method="post">
        <input type="hidden" asp-for="CategoryId" />

        <div class="card-columns mt-3">
            @foreach (var item in Model.Recipes)
            {
                <div class="card" style="width:400px">

                    <img class="card-img-top" src="@item.ImageUrl" alt="@item.RecipeName"
                 style="max-height: 300px;">
                    <div class="card-body">
                        <h4 class="card-title">@item.RecipeName</h4>
                        <div class="row">
                            <div class="col card-text">
                                @Html.DisplayNameFor(model => item.RecipeDescription)
                            </div>
                            <div class="col card-text">
                                @Html.DisplayFor(model => item.RecipeDescription)
                            </div>
                            </div>

                        <div class="row">
                            <div class="col card-text">
                                @Html.DisplayNameFor(model => item.Ingredients)
                            </div>
                            <div class="col card-text">
                                @Html.DisplayFor(model => item.Ingredients)
                            </div>

                        </div>
                        <div class="row">
                            <div class="col card-text">
                                @Html.DisplayNameFor(model => item.OrderDateTime)
                            </div>
                            <div class="col card-text">
                                @Html.DisplayFor(model => item.OrderDateTime)
                            </div>

                        </div>
                        <div class="row">
                            <div class="col card-text">
                                @Html.DisplayNameFor(model => item.hours1)
                            </div>
                            <div class="col card-text">
                                @Html.DisplayFor(model => item.hours1)
                            </div>

                        </div>
                        <div class="row">
                            <div class="col card-text">
                                @Html.DisplayNameFor(model => item.hours2)
                            </div>
                            <div class="col card-text">
                                @Html.DisplayFor(model => item.hours2)
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <select asp-for="Quantity">
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                        </select>
                        <button type="button" class="btn btn-primary"> <a class="btn btn-primary" asp-area="Food" asp-controller="Comments" asp-action="Create">Add Comment</a> </button>

                    </div>
                </div>
            }
        </div>
    </form>
}
