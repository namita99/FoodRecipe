@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="active">
            <button>  <a id="manage" class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a> </button>
        </li>
  

        <li class="active">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
                <button id="logout" type="submit" class="nav-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        	<li class="active">
            <button> <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>  </button>
            &nbsp; &nbsp; &nbsp;

            <button>    <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a> </button>
        </li>
    }
</ul>
