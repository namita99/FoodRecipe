<!DOCTYPE html>
<html lang="en">
<head>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
	<style>
		body {
			font-family: Calibri, Helvetica, sans-serif;
			background-image: url('/Images/text1.jpg');
		}
	</style>

	<nav class="navbar navbar-expand navbar-dark bg-success">
		<div class="container-fluid">
			<a class="navbar-brand" asp-area="RestaurantSite" asp-controller="Restaurant">
				<img src="~/Images/logo.png" style="width:35px" /> Food Recipe
			</a>
			<ul class="navbar-nav me-auto mb-2 mb-lg-0">

				<!-- NAVBAR LINKS -->
				<li class="nav-item">
					<a class="nav-link text-dark" asp-area="HomePage" asp-controller="FoodRecipes" asp-action="Index">Home</a>
				</li>
				<li class="nav-item">
					<a class="nav-link text-dark" asp-area="" asp-page="/Index6">About </a>
				</li>
				<li class="nav-item">
					<a class="nav-link text-dark" asp-area="" asp-page="/Index3">Services</a>
				</li>
				<li class="nav-item">
					<a class="nav-link text-dark" asp-area="" asp-page="/Index2">Contact</a>
				</li>
				<li class="nav-item">
					<a class="nav-link text-dark" asp-area="" asp-page="/Index7">Gallery</a>
				</li>
				



				<!-- DROPDOWN OPTIONS -->
				<li class="nav-item dropdown">
				<li class="nav-item dropdown">
					<button type="button" class="btn btn-primary">Admin</button>
					<button type="button" class="btn btn-prim dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					</button>
					<div class="dropdown-menu">
						
								<a class="dropdown-item"
								   asp-area="Food" asp-controller="Categories" asp-action="Index">Add Category</a>

							
								<a class="dropdown-item"
								   asp-area="Food" asp-controller="SubCategories" asp-action="Index">Add SubCategory</a>
							
								<a class="dropdown-item"
								   asp-area="Food" asp-controller="Recipes" asp-action="Index">Add Recipe</a>
							
								<a class="dropdown-item"
								   asp-area="Food" asp-controller="Customers" asp-action="Index">Add Customer</a>
							
								<a class="dropdown-item"
								   asp-area="Food" asp-controller="Competitions" asp-action="Index">Add Event</a>
							
								<a class="dropdown-item"
								   asp-area="Food" asp-controller="Comments" asp-action="Index">Comments</a>
						
					</div>
				</li>
			</li>


				<!-- DROPDOWN OPTIONS -->
				<li class="nav-item dropdown">
				<li class="nav-item dropdown">
					<button type="button" class="btn btn-primary">User</button>
					<button type="button" class="btn btn-prim dropdown-toggle dropdown-toggle-split" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					</button>
					<div class="dropdown-menu">
						
								<a class="dropdown-item"
											   asp-area="ManageTable" asp-controller="Home" asp-action="Index">Subcategory</a>

										
											<a class="dropdown-item"
											   asp-area="ManageTable" asp-controller="Home" asp-action="Index1">Recipe</a>
									
											<a class="dropdown-item"
											   asp-area="Food" asp-controller="Recipes" asp-action="Index">Add Recipe</a>
									
											<a class="dropdown-item"
											   asp-area="Food" asp-controller="Competitions" asp-action="Index">Event</a>
										
											<a class="dropdown-item"
											   asp-area="Food" asp-controller="Comments" asp-action="Index">Comments</a>
										
					</div>
				</li>
				</li>

				@* Inserting the Login Partial View *@
				<partial name="_LoginPartial" />
			</ul>

			
			<!-- SEARCH BOX -->
			<form class="d-flex">
				<input class="form-control me-2"
					   type="search"
					   placeholder="Search site" />
				<button class="btn btn-primary"
						type="submit">
					Search
				</button>
			</form>
		</div>
	</nav>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

  


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
